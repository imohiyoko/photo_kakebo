{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmitOnError": false
  },
  "include": ["apps/backend/src/**/*.ts", "apps/backend/src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}